


<div class="container has-background-success-light">    
    <div class="container">
      <div class="columns  level-item has-text-centered">
        <div class="column is-half">
            <div>
                <h1 class="title">Login! </h1>
                <p class="text is-danger"><%= flash[:error] %> </p>
                <%= form_for (:user) do |f| %>
                    <div class="field m-0">
                      <%= f.text_field :name, class:"input is-primary", placeholder: "Name" %><br><br>
                    </div>
                      
                    <div class="field">
                      <p class="control has-icons-left has-icons-right">
                        <%= f.email_field :email_address, class:"input is-primary", placeholder: "Email Address" %>
                        <span class="icon is-small is-left">
                          <i class="fas fa-envelope"></i>
                        </span>
                        <span class="icon is-small is-right">
                          <i class="fas fa-check"></i>
                        </span>
                      </p>
                    </div>

                    <div class="field">
                      <p class="control has-icons-left">
                        <%= f.password_field :password, class:"input is-primary", placeholder: "Password" %> <br><br>
                        <span class="icon is-small is-left">
                          <i class="fas fa-lock"></i>
                        </span>
                      </p>
                    </div>

                    <div class="control">
                      <%=f.submit "Login", class: "button is-success" %>
                    </div>

                <% end %>

            </div>
        </div>
        
      </div>
    </div>