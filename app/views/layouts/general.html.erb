  <section class="hero">
    <div class="hero-body">
      <div class="container level">
        <div class="column level-item has-text-centered">
          <%= image_tag("nyam-um.png", alt: "Nyam Um") %>
           <p class="subtitle has-text-black">
            What have you eaten? When will you eat? 
          </p>
        </div>
      </div>
    </div>
  </section>
</div>

  <body>
    <%= yield %>
  </body>
  </div>
