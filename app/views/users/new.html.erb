<h1>Sign up! </h1>

<%= render partial: 'layouts/errors', locals: {object: @user}  %>

<%= form_for (@user) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br><br>

<%= f.label :email_address %>
<%= f.email_field :email_address %>

<%= f.label :password %>
<%= f.password_field :password %> <br><br>

<%= f.submit "Sign Up" %>

<% end %>